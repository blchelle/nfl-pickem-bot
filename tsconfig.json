{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "outDir": "dist",
    "rootDirs": ["src", "spec"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@data/*": ["src/data/*"],
      "@picks/*": ["src/picks/*"],
      "@service/*": ["src/service/*"],
      "@webscraper/*": ["src/webscraper/*"],
      "@utils/*": ["src/utils/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  }
}
